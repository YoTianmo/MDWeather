<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/main_refresh_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/main_appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:fitsSystemWindows="true"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/main_collapsing_tb_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">

                <RelativeLayout
                    android:id="@+id/main_header_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="1"
                    tools:background="@drawable/bg_weather_fine_night">

                    <TextView
                        android:id="@+id/main_tv_wind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="32dp"
                        android:layout_marginLeft="24dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        tools:text="无持续性风向 微风级"/>

                    <TextView
                        android:id="@+id/main_tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/main_tv_wind"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="24dp"
                        android:textColor="@color/white"
                        android:textSize="19sp"
                        tools:text="晴"/>


                    <TextView
                        android:id="@+id/main_tv_temp_hl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/main_tv_type"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/main_tv_type"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        tools:text="14°/18°"/>

                    <TextView
                        android:id="@+id/main_tv_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/main_tv_type"
                        android:layout_alignLeft="@id/main_tv_type"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/white"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        tools:text="18°"/>


                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/main_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/main_content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/weather_fine_night"
                android:orientation="vertical">

                <com.sanousun.mdweather.ui.widget.SunRiseToSetView
                    android:id="@+id/main_view_sun_rise2set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"/>

                <com.sanousun.mdweather.ui.widget.SevenDaysWeatherView
                    android:id="@+id/main_view_seven_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"/>

                <com.sanousun.mdweather.ui.widget.AirQualityIndexView
                    android:id="@+id/main_view_aqi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <include
                        android:id="@+id/main_view_gm"
                        layout="@layout/view_index"/>

                    <include
                        android:id="@+id/main_view_fs"
                        layout="@layout/view_index"/>

                    <include
                        android:id="@+id/main_view_ct"
                        layout="@layout/view_index"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include
                        android:id="@+id/main_view_yd"
                        layout="@layout/view_index"/>

                    <include
                        android:id="@+id/main_view_xc"
                        layout="@layout/view_index"/>

                    <include
                        android:id="@+id/main_view_ls"
                        layout="@layout/view_index"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

</android.support.v4.widget.SwipeRefreshLayout>



