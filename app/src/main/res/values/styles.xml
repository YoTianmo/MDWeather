<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.Transparent.MainDark" parent="AppTheme.Transparent">
        <item name="mainTextColor">#FFFFFF</item>
        <item name="mainTextSecondColor">#DFDFDF</item>
    </style>

    <style name="AppTheme.Transparent.MainLight" parent="AppTheme.Transparent">
        <item name="mainTextColor">#171717</item>
        <item name="mainTextSecondColor">#373737</item>
    </style>

    <style name="cardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>
